@model CMS.Models.SiteConfig

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SiteConfig</legend>

        @Html.HiddenFor(model => model.SiteConfigID)

        <div class="editor-label">
            @Html.LabelFor(model => model.SiteName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SiteName)
            @Html.ValidationMessageFor(model => model.SiteName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SiteDesc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SiteDesc)
            @Html.ValidationMessageFor(model => model.SiteDesc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SiteStartCatID, "Category")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SiteStartCatID", String.Empty)
            @Html.ValidationMessageFor(model => model.SiteStartCatID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
